<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeQuizActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="22dp"
                android:hint="Word"
                android:gravity="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/percentCorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:hint="Percent Correct"
                android:gravity="center"
                android:layout_marginBottom="5dp"/>
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/definition0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="0"
                        android:text="TextView"
                        android:textSize="18dp"
                        android:hint="Option 1"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:backgroundTint="#cc99ff"
                        />
                    <Button
                        android:id="@+id/definition1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="1"
                        android:text="TextView"
                        android:textSize="18dp"
                        android:hint="Option 2"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:backgroundTint="#99ffbb"/>

                    <Button
                        android:id="@+id/definition2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="2"
                        android:text="TextView"
                        android:textSize="18dp"
                        android:hint="Option 3"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:backgroundTint="#99e6ff"/>

                    <Button
                        android:id="@+id/definition3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="3"
                        android:text="TextView"
                        android:textSize="18dp"
                        android:hint="Option 4"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:backgroundTint="#ff99bb"/>

                    <Button
                        android:id="@+id/p_q_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exit Quiz"
                        android:backgroundTint="@color/colorFadBlue"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>